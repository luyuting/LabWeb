<struts> 
	<package name="json" namespace="/json" extends="json-default">
		<action name="news_execute" class="com.labweb.action.NewsAction" method="execute">
			<result type="json"><param name="includeProperties">newsMap.*</param></result>
		</action>
		<action name="mesg_execute" class="com.labweb.action.MesgAction" method="execute">
			<result type="json"><param name="includeProperties">mesgMap.*</param></result>
		</action>
		<action name="project_execute" class="com.labweb.action.ProjectAction" method="execute">
			<result type="json"><param name="includeProperties">projectMap.*</param></result>
		</action>
		<action name="lab_execute" class="com.labweb.action.LabAction" method="execute">
			<result type="json"><param name="includeProperties">labMap.*</param></result>
		</action>
		<action name="group_execute" class="com.labweb.action.GroupAction" method="execute">
			<result type="json"><param name="includeProperties">groupList.*</param></result>
		</action>
	</package>
	<package name="operate" namespace="/operate" extends="struts-default">
		<action name="news_write" class="com.labweb.action.NewsAction" method="write">
			<result>/test.jsp</result>
		</action>
		<action name="news_read" class="com.labweb.action.NewsAction" method="read">
			<result>/test.jsp</result>
		</action>
		
	</package>
